<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.ridhoperdana.jalan">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".drawer.BaseActivity" />
        <activity
            android:name=".activity.PilihSendiriActivity"
            android:label="Pilih Sendiri" />
        <activity
            android:name=".activity.RiwayatActivity"
            android:label="Riwayat Perjalanan" />
        <activity
            android:name=".activity.PengaturanActivity"
            android:label="Pengaturan" />
        <activity
            android:name=".activity.DipilihkanActivity"
            android:label="Dipilihkan" />
        <activity android:name=".activity.KonfirmasiActivity"
            android:label="Konfirmasi Pilihan"/>
    </application>

</manifest>